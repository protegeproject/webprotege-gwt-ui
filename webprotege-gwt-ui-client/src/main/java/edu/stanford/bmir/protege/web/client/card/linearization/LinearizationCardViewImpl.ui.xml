<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:custom="urn:import:edu.stanford.bmir.protege.web.client.form.complexcheckbox"
             xmlns:progress="urn:import:edu.stanford.bmir.protege.web.client.progress"
             xmlns:card="urn:import:edu.stanford.bmir.protege.web.client.card"
             xmlns:text="urn:import:edu.stanford.bmir.protege.web.client.library.text">
    <ui:with field="lin" type="edu.stanford.bmir.protege.web.client.linearization.LinearizationTableResourceBundle"/>
    <ui:style>
        .residualsCard {
            display: flex;
            flex-direction: column;
            -webkit-box-shadow: 0 0 40px 0 rgba(0, 0, 0, .15);
            box-shadow: 0 0 40px 0 rgba(0, 0, 0, .15);
            margin: 14px;
            width: 97%;
        }

        .residualsCardBody {
            display: flex;
            flex-direction: column;
        }

        .residualsCardBody div {
        }

        .residualsCardHeader {
            font-size: 14px;
            color: #fff;
            line-height: 1.4;
            background-color: #186cd4;
            padding: 10px;
            font-weight: bold;
            font-family: "Helvetica Neue", "Lucida Grande", "Segoe UI", Arial, Helvetica, Verdana, sans-serif;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px
        }

        .residualsRow {
            display: flex;
            margin-left: 15px;
            margin-right: 15px;
            font-size: 12px;
            width: 99%;
            border-bottom: 1px solid #f2f2f2;
            border-top: 1px solid #f2f2f2;
            min-height: 35px;
            align-items: center;
        }

        .residualValue {
            min-width: 40%;
            margin-left: 7px;
            border: 1px solid #B5B5B5;
            padding: 5px !important;
        }

        .residualValue::placeholder {
            color: #B5B5B5;
            opacity: 1;
        }

        .busyView {
            width: 100%;
            height: 100%;
        }

        .residualLabelHeader {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
            min-width: 25%;
            align-items: center;
        }

        .label {
            flex-grow: 0;
            flex-shrink: 0;
            justify-self: flex-start;
            margin-right: 0.3em;
            cursor: pointer;
        }
    </ui:style>
    <g:HTMLPanel ui:field="paneContainer">
        <progress:BusyViewImpl ui:field="busyView" visible="false" addStyleNames="{style.busyView}"/>
        <g:HTMLPanel width="100%">
            <g:FlexTable width="97%" height="100%" ui:field="flexTable"/>
            <g:HTMLPanel addStyleNames="{style.residualsCard} " ui:field="residualsCard">
                <g:HTMLPanel addStyleNames="{style.residualsCardHeader}">
                    Linearizations residuals
                </g:HTMLPanel>
                <g:HTMLPanel addStyleNames="{style.residualsCardBody}">
                    <g:HTMLPanel addStyleNames="{style.residualsRow}">
                        <g:HTMLPanel addStyleNames="{style.residualLabelHeader}">
                            <g:Label text="Suppress 'Other Specified' Residuals" addStyleNames="{style.label}"/>
                            <card:EditableIconImpl ui:field="editableIconSuppOtherSpecRes" addStyleNames="{lin.style.marginLeftAuto} {lin.style.size75}"
                                                   visible="false"/>
                        </g:HTMLPanel>
                        <custom:ConfigurableCheckbox
                                ui:field="suppressOthersSpecifiedResidual"/>
                    </g:HTMLPanel>
                    <g:HTMLPanel addStyleNames="{style.residualsRow}">
                        <g:HTMLPanel addStyleNames="{style.residualLabelHeader}">
                            <g:Label text="Suppress 'Unspecified' Residuals" addStyleNames="{style.label}"/>
                            <card:EditableIconImpl ui:field="editableIconSuppUnspecifiedRes" addStyleNames="{lin.style.marginLeftAuto} {lin.style.size75}"
                                                   visible="false"/>
                        </g:HTMLPanel>
                        <custom:ConfigurableCheckbox
                                ui:field="suppressUnspecifiedResidual"/>
                    </g:HTMLPanel>
                    <g:HTMLPanel addStyleNames="{style.residualsRow}">
                        <g:HTMLPanel addStyleNames="{style.residualLabelHeader}">
                            <g:Label text="'Other Specified' Residual title" addStyleNames="{style.label}"/>
                            <card:EditableIconImpl ui:field="editableIconOtherSpecRes" addStyleNames="{lin.style.marginLeftAuto} {lin.style.size75}"
                                                   visible="false"/>
                        </g:HTMLPanel>
                        <text:PlaceholderTextBox addStyleNames="{style.residualValue}"
                                                 ui:field="otherSpecifiedResidualTitle"
                                                 placeholder="Add the 'Other specified' residual title"/>
                    </g:HTMLPanel>
                    <g:HTMLPanel addStyleNames="{style.residualsRow}">
                        <g:HTMLPanel addStyleNames="{style.residualLabelHeader}">
                            <g:Label text="'Unspecified' Residual title" addStyleNames="{style.label}"/>
                            <card:EditableIconImpl ui:field="editableIconUnspecifiedRes" addStyleNames="{lin.style.marginLeftAuto} {lin.style.size75}"
                                                   visible="false"/>
                        </g:HTMLPanel>
                        <text:PlaceholderTextBox addStyleNames="{style.residualValue}"
                                                 ui:field="unspecifiedResidualTitle"
                                                 placeholder="Add the 'Unspecified' residual title"/>
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>