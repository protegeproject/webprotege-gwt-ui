<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:gwtcodemirror="urn:import:edu.stanford.bmir.gwtcodemirror.client">
        <ui:style>
                .linearizationAnchor {
                        padding-top: 10px;
                        padding-left: 5px;
                        display: inline-block;
                        color: #909090;
                }
        </ui:style>
        <g:HTMLPanel>
                <gwtcodemirror:GWTCodeMirror ui:field="bodyField" height="10em"/>
                <g:Anchor addStyleNames="{style.linearizationAnchor}" text="Markdown supported"  ui:field="anchor" target="_blank" href="http://www.markdowntutorial.com/"/>
        </g:HTMLPanel>
</ui:UiBinder>