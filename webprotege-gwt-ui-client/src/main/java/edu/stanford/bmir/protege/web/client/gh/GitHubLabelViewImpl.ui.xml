<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .gitHubLabel {
            white-space: nowrap;
            font-size: 12px;
            height: 20px;
            line-height: 20px;
            padding: 0 8px;
            border-radius: 999px;
            display: inline-block;
            margin: 2px;
            font-weight: 600;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:Label ui:field="name" addStyleNames="{style.gitHubLabel}"/>
    </g:HTMLPanel>
</ui:UiBinder>