<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .message-block {
            width: 100%;
            padding-left: 10px;
            box-sizing: border-box;
        }
        .next-block-padding-top {
            padding-top: 20px;
        }
        .hint {
            margin-top: 20px;
            color: #6b6b6b;
            font-size: 12px;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:SimplePanel ui:field="editorField" addStyleNames="{style.message-block}"/>
        <g:SimplePanel ui:field="hierarchyContainer" addStyleNames="{style.message-block} {style.next-block-padding-top}"/>
        <g:Label ui:field="selectionHint" addStyleNames="{style.message-block} {style.hint}" visible="false"/>
    </g:HTMLPanel>

</ui:UiBinder>