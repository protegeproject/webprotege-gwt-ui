<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .statusMessageContainer {
            margin: 1em;
            border: 2px solid silver;
            border-radius: 10px;
            padding: 1em;
        }

        .installButtonContainer {
            padding-top: 1em;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{wp.style.formGroup} {wp.style.formGroupNarrow}">
            <g:Label text="Owner name (organization or person name)" addStyleNames="{wp.style.formLabel}"/>
            <g:TextBox ui:field="ownerNameField"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{wp.style.formGroup} {wp.style.formGroupNarrow}">
            <g:Label text="Repository name" addStyleNames="{wp.style.formLabel}"/>
            <g:TextBox ui:field="repoNameField"/>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="statusMessageContainer" addStyleNames="{style.statusMessageContainer} {wp.style.formGroup}">
            <g:HTMLPanel>
                <g:Label ui:field="messageLabel" text=""/>
                <g:HTMLPanel ui:field="installButtonContainer" addStyleNames="{style.installButtonContainer}">
                    <g:Button ui:field="installAppButton" text="Install GitHub app" addStyleNames="{wp.buttons.button} {wp.buttons.dialogButton} {wp.buttons.alternateButton}"/>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>