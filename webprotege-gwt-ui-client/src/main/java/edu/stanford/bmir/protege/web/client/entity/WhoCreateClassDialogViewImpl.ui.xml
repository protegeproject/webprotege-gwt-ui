<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:text="urn:import:edu.stanford.bmir.protege.web.client.library.text"
             xmlns:primitive="urn:import:edu.stanford.bmir.protege.web.client.primitive">
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .langTagField {
            flex-grow: 1;
            flex-shrink: 1;
        }

        .resetButton {
            flex-grow: 0;
            flex-shrink: 0;
            margin-left: 7px;
        }

        .langTagPanel {
            display: flex;
            flex-direction: row;
        }

        .warningField {
            margin-top: 20px;
        }

        .mandatoryField {
            color: red;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{wp.style.formGroup}">
            <g:Label text="Names" ui:field="entityNamesLabel" addStyleNames="{wp.style.formLabel}"/>
            <text:ExpandingTextBoxImpl ui:field="textBox"
                                       anchorVisible="false"/>

            <!--                                       mode="MULTI_LINE"-->
            <g:Label addStyleNames="{wp.style.formHelpText}"
                     text="{msg.createEntityInstructions}"/>
        </div>
        <div class="{wp.style.formGroup}">
            <g:Label text="Reason for change" addStyleNames="{wp.style.formLabel}"/>
            <text:ExpandingTextBoxImpl ui:field="reasonForChangeTextBox"
                                       mode="MULTI_LINE"
                                       anchorVisible="false"/>
            <g:Label ui:field='reasonForChangeErrorLabel' addStyleNames="{wp.style.formHelpText}"/>
        </div>

        <g:SimplePanel ui:field="duplicateEntityResultsContainer"/>
    </g:HTMLPanel>
</ui:UiBinder>