<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            display: flex;
            flex-direction: column;
            box-sizing: border-box;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
        }
        .holder {
            flex-grow: 1;
            flex-shrink: 1;
            position: relative;
        }
        .holder > div {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            overflow: hidden;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:SimplePanel ui:field="cardHolder" addStyleNames="{style.holder}"/>
    </g:HTMLPanel>
</ui:UiBinder>