<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            display: flex;
            flex-direction: column;
        }
        .linearizationRowsContainer {
            display: flex;
            flex-direction: column;
        }
        .linearizationRowContainerTitle {
            display: flex;
            padding-bottom: 15px;
        }
        .addButton {
            margin-left: 10px;
        }
        .linearization-row {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 5px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label text="Capability" addStyleNames="{wp.style.formLabel}"/>
            <g:ListBox ui:field="capabilityIdField"/>
        </g:HTMLPanel>

        <g:HTMLPanel addStyleNames="{style.linearizationRowsContainer}">
            <g:HTMLPanel addStyleNames="{style.linearizationRowContainerTitle}">
                <g:Label text="Applicable linearization rows" addStyleNames="{wp.style.formLabel}"/>

                <g:Button title="Add linearization" addStyleNames="{wp.buttons.addButton} {style.addButton}" ui:field="addLinearizationButton">
                </g:Button>
            </g:HTMLPanel>
            <g:FlowPanel ui:field="linearizationDefinitionsContainer" addStyleNames="{wp.style.formGroup}"/>
        </g:HTMLPanel>

        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label text="Granted for" addStyleNames="{wp.style.formLabel}"/>
            <g:SimplePanel ui:field="contextCriteriaContainer"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>