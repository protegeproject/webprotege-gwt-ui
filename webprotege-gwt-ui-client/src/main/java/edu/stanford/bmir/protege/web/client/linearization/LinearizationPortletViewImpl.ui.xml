<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:custom="urn:import:edu.stanford.bmir.protege.web.client.form.complexcheckbox"
             xmlns:text="urn:import:edu.stanford.bmir.protege.web.client.library.text">
    <ui:style>
        .paneContainer {
            display: flex;
            flex-direction: column;
        }

        .buttonsWrapper {
            flex-direction: row;
            align-content: end;
            display: flex;
            justify-content: end;
            width: 97%;
            margin:15px;
            padding: 3px;
        }

        .editValuesButton {
            background-color: #186cd4;
            border: none;
            color: white;
            padding: 10px 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 8px;
        }

        .residualsCard {
            display:flex;
            flex-direction: column;
            -webkit-box-shadow: 0 0 40px 0 rgba(0,0,0,.15);
            box-shadow: 0 0 40px 0 rgba(0,0,0,.15);
            margin: 14px;
            width: 97%;
            padding-top: 3px;
            padding-left: 3px;
            padding-bottom: 15px;
        }
        .residualsCardBody{
            display: flex;
        }
        .residualsCardHeader{
            display: flex;
            font-size: 23px;
            margin: 15px;
        }
        .residualsLabelColumn {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            margin-left: 15px;
            margin-right: 15px;
            font-size: 15px;
        }

        .residualsValueColumn {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
        }

        .editValuesButton:hover {
            background-color: #1252a1;
        }

        .cancelButton {
            background-color: #F7F7F7;
            border: none;
            color: var(--primary--color);
            padding: 10px 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 8px;
        }

        .titleTextBox {
            margin-left: 6px;
            font-size : 16px;
        }
        .cancelButton:hover {
            background-color: #E3E3E3;
        }
    </ui:style>
    <g:HTMLPanel ui:field="paneContainer" >
        <g:HTMLPanel width="100%">
            <g:FlexTable width="97%" height="100%" ui:field="flexTable"/>
            <g:HTMLPanel addStyleNames="{style.residualsCard}">
                <g:HTMLPanel addStyleNames="{style.residualsCardHeader}">
                    Linearization residuals
                </g:HTMLPanel>
                <g:HTMLPanel addStyleNames="{style.residualsCardBody}">
                    <g:HTMLPanel addStyleNames="{style.residualsLabelColumn}">
                        <g:Label text="Supress specified residual"/>
                        <g:Label text="Unspecified residual title"/>
                    </g:HTMLPanel>
                    <g:HTMLPanel addStyleNames="{style.residualsValueColumn}">
                        <custom:ThreeStateCheckbox ui:field="suppressResidual"></custom:ThreeStateCheckbox>
                        <text:PlaceholderTextBox addStyleNames="{style.titleTextBox}" ui:field="residualTitle" placeholder="Unspecified title" />
                    </g:HTMLPanel>
                </g:HTMLPanel>

            </g:HTMLPanel>
        </g:HTMLPanel>
        <div class="{style.buttonsWrapper}">
            <g:Button ui:field="editValuesButton" addStyleNames="{style.editValuesButton}">Edit values</g:Button>
            <g:Button ui:field="saveValuesButton" addStyleNames="{style.editValuesButton}">Save values</g:Button>
            <g:Button ui:field="cancelButton" addStyleNames="{style.cancelButton}">Cancel</g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>