<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:custom="urn:import:edu.stanford.bmir.protege.web.client.form.complexcheckbox"
             xmlns:progress="urn:import:edu.stanford.bmir.protege.web.client.progress"
             xmlns:text="urn:import:edu.stanford.bmir.protege.web.client.library.text">
    <ui:style>
        .paneContainer {
            display: flex;
            flex-direction: column;
        }

        .buttonsWrapper {
            flex-direction: row;
            align-content: end;
            display: flex;
            justify-content: end;
            width: 97%;
            margin: 15px;
            padding: 3px;
        }

        .editValuesButton {
            background-color: #186cd4;
            border: none;
            color: white;
            padding: 10px 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 8px;
        }

        .residualsCard {
            display: flex;
            flex-direction: column;
            -webkit-box-shadow: 0 0 40px 0 rgba(0, 0, 0, .15);
            box-shadow: 0 0 40px 0 rgba(0, 0, 0, .15);
            margin: 14px;
            width: 97%;
        }

        .residualsCardBody {
            display: flex;
            flex-direction: column;
        }

        .residualsCardBody div {
        }

        .residualsCardHeader {
            font-size: 14px;
            color: #fff;
            line-height: 1.4;
            background-color: #186cd4;
            padding: 10px;
            font-weight: bold;
            font-family: "Helvetica Neue", "Lucida Grande", "Segoe UI", Arial, Helvetica, Verdana, sans-serif;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px
        }

        .residualsRow {
            display: flex;
            margin-left: 15px;
            margin-right: 15px;
            font-size: 12px;
            width: 99%;
            border-bottom: 1px solid #f2f2f2;
            border-top: 1px solid #f2f2f2;
            min-height: 35px;
            align-items: center;
        }

        .residualLabel {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            min-width: 25%;
        }

        .residualValue {
            min-width: 40%;
            margin-left: 7px;
            border: 1px solid #B5B5B5;
            padding: 5px !important;
        }

        .residualValue::placeholder {
            color: #B5B5B5;
            opacity: 1;
        }

        .editValuesButton:hover {
            background-color: #1252a1;
        }

        .cancelButton {
            background-color: #F7F7F7;
            border: none;
            color: var(--primary--color);
            padding: 10px 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 8px;
        }

        .busyView {
            width: 100%;
            height: 100%;
        }

        .titleTextBox {
            margin-left: 6px;
            font-size: 16px;
        }

        .cancelButton:hover {
            background-color: #E3E3E3;
        }
    </ui:style>
    <g:HTMLPanel ui:field="paneContainer">
        <progress:BusyViewImpl ui:field="busyView" visible="false" addStyleNames="{style.busyView}"/>
        <g:HTMLPanel width="100%">
            <g:FlexTable width="97%" height="100%" ui:field="flexTable"/>
            <g:HTMLPanel addStyleNames="{style.residualsCard}">
                <g:HTMLPanel addStyleNames="{style.residualsCardHeader}">
                    Linearizations residuals
                </g:HTMLPanel>
                <g:HTMLPanel addStyleNames="{style.residualsCardBody}">
                    <g:HTMLPanel addStyleNames="{style.residualsRow}">
                        <g:Label addStyleNames="{style.residualLabel}" text="Suppress 'Other Specified' Residuals"/>
                        <custom:ConfigurableCheckbox
                                ui:field="suppressOthersSpecifiedResidual"></custom:ConfigurableCheckbox>
                    </g:HTMLPanel>
                    <g:HTMLPanel addStyleNames="{style.residualsRow}">
                        <g:Label addStyleNames="{style.residualLabel}" text="Suppress 'Unspecified' Residuals"/>
                        <custom:ConfigurableCheckbox
                                ui:field="suppressUnspecifiedResidual"></custom:ConfigurableCheckbox>
                    </g:HTMLPanel>
                    <g:HTMLPanel addStyleNames="{style.residualsRow}">
                        <g:Label addStyleNames="{style.residualLabel}" text="'Other Specified' Residual title"/>
                        <text:PlaceholderTextBox addStyleNames="{style.residualValue}"
                                                 ui:field="otherSpecifiedResidualTitle"
                                                 placeholder="Add the 'Other specified' residual title"/>
                    </g:HTMLPanel>
                    <g:HTMLPanel addStyleNames="{style.residualsRow}">
                        <g:Label addStyleNames="{style.residualLabel}" text="'Unspecified' Residual title"/>
                        <text:PlaceholderTextBox addStyleNames="{style.residualValue}"
                                                 ui:field="unspecifiedResidualTitle"
                                                 placeholder="Add the 'Unspecified' residual title"/>
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </g:HTMLPanel>
        <div class="{style.buttonsWrapper}">
            <g:Button ui:field="editValuesButton" addStyleNames="{style.editValuesButton}">Edit values</g:Button>
            <g:Button ui:field="saveValuesButton" addStyleNames="{style.editValuesButton}">Save values</g:Button>
            <g:Button ui:field="cancelButton" addStyleNames="{style.cancelButton}">Cancel</g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>