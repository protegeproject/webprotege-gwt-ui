<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        @external .gwt-SuggestBox;

        .gwt-SuggestBox {
        }

        .card {
            border-bottom: 2px solid #f2f2f2;
            padding-bottom: 15px;
        }

        .label {
            font-size: 13px;
            white-space: nowrap;
            font-weight: bold;
            margin-right: 3vw;
            text-align: center;
            align-content: center;
        }

        .deleteButton {
            justify-self: flex-end;
            width: 1.7em;
            height: 1.7em;
        }

        .labelHeader {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
            width: 100%;
            align-items: center;
        }

        .deleteButtonHolder {
            flex-grow: 1;
            flex-shrink: 1;
            display: flex;
            flex-direction: row;
            justify-content: flex-end;
        }

        .main {
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }

        .main textarea {
            border-left: 1px solid transparent;
            border-right: 1px solid transparent;
            border-top: 1px solid transparent;
            border-bottom: 1px solid transparent;
        }

        .main input {
            border-left: 1px solid transparent;
            border-right: 1px solid transparent;
            border-top: 1px solid transparent;
            border-bottom: 1px solid transparent;
        }

        .ancestorFlex {
            flex: 1 1 auto;
            min-width: 0; /* very important to allow it to shrink on overflow */
            padding-right: 10px;
        }

        .ancestorFlex select {
            width: 100%;
            box-sizing: border-box;
        }

        .deleteButtonHolder {
            flex-grow: 1;
            flex-shrink: 1;
            display: flex;
            flex-direction: row;
            justify-content: flex-end;
        }


    </ui:style>

    <g:HTMLPanel ui:field="paneContainer" addStyleNames="{style.card} {wp.style.formGroup} {style.main}">
        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:HTMLPanel addStyleNames="{wp.style.form}">
                <g:HTMLPanel addStyleNames="{wp.style.formGroupRow}">
                    <g:HTMLPanel addStyleNames="{wp.style.formGroupSingleCol}">
                        <g:HTMLPanel ui:field="fieldHeader" addStyleNames="{style.labelHeader}">
                            <g:Label ui:field="superClassLabel"
                                     addStyleNames="{wp.style.formLabel} {style.label}"/>
                            <g:HTMLPanel addStyleNames="{style.deleteButtonHolder}">
                                <g:Button ui:field="deleteTableWrapper"
                                          addStyleNames="{wp.buttons.deleteButton} {style.deleteButton}"/>
                            </g:HTMLPanel>
                        </g:HTMLPanel>
                        <g:HTMLPanel addStyleNames="{wp.style.form}">
                            <g:HTMLPanel addStyleNames="{wp.style.formGroupRow}">
                                <g:HTMLPanel addStyleNames="{wp.style.formGroupSingleCol}">
                                        <g:HTMLPanel addStyleNames="{wp.style.formControl}">
                                            <g:HTMLPanel ui:field="ancestorWrapper"
                                                         addStyleNames="{style.ancestorFlex}
                                {wp.style.formControlEditor}
                                {wp.style.formControlEditorEntity}
                                {style.gwt-SuggestBox}">
                                                <g:ListBox ui:field="ancestorDropdown"/>
                                            </g:HTMLPanel>
                                        </g:HTMLPanel>
                                </g:HTMLPanel>
                            </g:HTMLPanel>
                        </g:HTMLPanel>
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>