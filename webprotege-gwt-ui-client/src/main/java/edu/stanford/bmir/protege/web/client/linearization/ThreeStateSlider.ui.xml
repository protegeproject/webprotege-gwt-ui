<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .switch-toggle {
            float: left;
            display:flex;
            width:100%;
            justify-content: center;
            cursor: pointer;
        }

        .toggle-yes.active {
            background-color: green;
        }
        .toggle-unknown.active {
            background-color: gray;
        }
        .toggle-no.active {
            background-color: red;
        }

        .choiceBox {
            min-width:50px;
            min-height:50px;
        }


    </ui:style>

    <g:HTMLPanel>
        <div class="{style.switch-toggle}">

            <span ui:field="optionTrue">T</span>

            <span ui:field="optionUnknown">N/A</span>

            <span ui:field="optionFalse">F</span>

        </div>

    </g:HTMLPanel>
</ui:UiBinder>