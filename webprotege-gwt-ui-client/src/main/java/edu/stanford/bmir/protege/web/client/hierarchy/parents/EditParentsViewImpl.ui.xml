<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:text="urn:import:edu.stanford.bmir.protege.web.client.library.text"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:wp='urn:import:edu.stanford.bmir.protege.web.client.primitive'>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>

    <ui:style>
        .warningField {
            margin-top: 20px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{wp.style.formGroup}">
            <g:Label text="Class" addStyleNames="{wp.style.formLabel}"/>
            <text:ExpandingTextBoxImpl ui:field="textBox"
                                       anchorVisible="false"/>
        </div>
        <div class="{wp.style.formGroup}">
            <g:Label text="{msg.hierarchy_parents}" addStyleNames="{wp.style.formLabel}"/>
            <wp:PrimitiveDataListEditor ui:field="parents"/>
        </div>
        <div class="{wp.style.formGroup}">
            <g:Label text="{msg.hierarchy_equivalentClassParents}" addStyleNames="{wp.style.formLabel}"/>
            <wp:PrimitiveDataListEditor ui:field="equivalentClassParents"/>
        </div>
        <div class="{wp.style.formGroup}">
            <g:Label text="Reason for change" addStyleNames="{wp.style.formLabel}"/>
            <text:ExpandingTextBoxImpl ui:field="reasonForChangeTextBox"
                                       mode="MULTI_LINE"
                                       anchorVisible="false"/>
            <g:Label ui:field='reasonForChangeErrorLabel' addStyleNames="{wp.style.formHelpText}"/>
            <g:HTML ui:field="classesWithCyclesWarningField"
                    visible="false"
                    addStyleNames="{wp.style.warningLabel} {style.warningField}"/>
            <g:HTML ui:field="classesWithRetiredParentsField"
                    visible="false"
                    addStyleNames="{wp.style.warningLabel} {style.warningField}"/>
            <g:HTML ui:field="linearizationPathParentField"
                    visible="false"
                    addStyleNames="{wp.style.warningLabel} {style.warningField}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>