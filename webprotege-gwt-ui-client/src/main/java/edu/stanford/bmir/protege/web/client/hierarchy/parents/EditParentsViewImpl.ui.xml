<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:text="urn:import:edu.stanford.bmir.protege.web.client.library.text"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:wp='urn:import:edu.stanford.bmir.protege.web.client.primitive'>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>

    <ui:style>
        .warningField {
            margin-top: 20px;
        }

        .helpIconHolder {
            flex-grow: 1;
            flex-shrink: 1;
            display: flex;
            flex-direction: row;
            justify-content: flex-end;
        }

        .helpIcon {
            justify-self: flex-end;
            width: 1.7em;
            height: 1.7em;
        }
        .labelHeader {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
            width: 100%;
            align-items: center;
        }
        .label {
            flex-grow: 0;
            flex-shrink: 0;
            justify-self: flex-start;
            margin-right: 0.3em;
            cursor: pointer;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{wp.style.formGroup}">
            <g:Label text="Class" addStyleNames="{wp.style.formLabel}"/>
            <text:ExpandingTextBoxImpl ui:field="textBox"
                                       anchorVisible="false"/>
        </div>
        <div class="{wp.style.formGroup}">
            <g:Label text="{msg.hierarchy_parents}" addStyleNames="{wp.style.formLabel}"/>
            <wp:PrimitiveDataListEditor ui:field="parents"/>
        </div>
        <g:HTMLPanel ui:field="equivalentParentClassContainer" addStyleNames="{wp.style.formGroup}">
            <g:HTMLPanel ui:field="fieldHeader" addStyleNames="{style.labelHeader}">
                <g:Label text="{msg.hierarchy_equivalentClassParents}" addStyleNames="{wp.style.formLabel} {style.label}"/>
                <g:HTMLPanel addStyleNames="{style.helpIconHolder}">
                    <g:HTMLPanel ui:field="equivalentParentClassTooltip"
                                 addStyleNames="{wp.style.helpIcon} {style.helpIcon}">
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </g:HTMLPanel>
            <wp:PrimitiveDataListEditor ui:field="equivalentClassParents"/>
        </g:HTMLPanel>
        <div class="{wp.style.formGroup}">
            <g:Label text="Reason for change" addStyleNames="{wp.style.formLabel}"/>
            <text:ExpandingTextBoxImpl ui:field="reasonForChangeTextBox"
                                       mode="MULTI_LINE"
                                       anchorVisible="false"/>
            <g:Label ui:field='reasonForChangeErrorLabel' addStyleNames="{wp.style.formHelpText}"/>
            <g:HTML ui:field="classesWithCyclesWarningField"
                    visible="false"
                    addStyleNames="{wp.style.warningLabel} {style.warningField}"/>
            <g:HTML ui:field="classesWithRetiredParentsField"
                    visible="false"
                    addStyleNames="{wp.style.warningLabel} {style.warningField}"/>
            <g:HTML ui:field="linearizationPathParentField"
                    visible="false"
                    addStyleNames="{wp.style.warningLabel} {style.warningField}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>