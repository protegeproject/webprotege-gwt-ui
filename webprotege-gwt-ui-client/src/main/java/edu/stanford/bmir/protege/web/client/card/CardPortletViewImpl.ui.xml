<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            margin: 5px;
            border: 1px solid magenta;
            box-sizing: border-box;
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            width: 400px;
            height: 300px;
            display: flex;
            flex-direction: column;
        }
        .tabBarContainer {
            flex-grow: 0;
            flex-shrink: 0;
        }
        .stack {
            flex-grow: 1;
            flex-shrink: 1;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:SimplePanel ui:field="tabBarContainer" addStyleNames="{style.tabBarContainer}"/>
        <g:HTMLPanel ui:field="stack" addStyleNames="{style.stack}">

        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>